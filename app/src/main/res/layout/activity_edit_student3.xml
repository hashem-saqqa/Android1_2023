<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Testing.DatabaseFullExample.EditStudentActivity">

    <EditText
        android:id="@+id/studentNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Student Name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/studentGPAEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Student GPA"
        app:layout_constraintTop_toBottomOf="@id/studentNameEt" />

    <EditText
        android:id="@+id/studentFieldEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Student Field"
        app:layout_constraintTop_toBottomOf="@id/studentGPAEt" />

    <Button
        android:id="@+id/editBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/studentFieldEt" />

</androidx.constraintlayout.widget.ConstraintLayout>