<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Testing.MidExam.AreaPerimeterCalculator">

    <EditText
        android:id="@+id/lengthEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="100dp"
        android:hint="Enter the Length of the rectangle"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/widthEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:hint="Enter the Width of the rectangle"
        app:layout_constraintTop_toBottomOf="@id/lengthEt" />

    <Button
        android:id="@+id/calculateBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/widthEt" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/calculateBt"
        android:id="@+id/resultTv"
        android:background="#eee"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="25sp"
        android:textColor="#000"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>