<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#fff"
    >

    <TextView
        android:id="@+id/questionTextTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Question text"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionIdTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="id"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/questionTextTv"
        app:layout_constraintEnd_toStartOf="@id/questionTypeTv"
        app:layout_constraintTop_toBottomOf="@id/questionTextTv" />

    <TextView
        android:id="@+id/questionTypeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="question Type"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/questionIdTv"
        app:layout_constraintEnd_toStartOf="@id/markTv"
        app:layout_constraintTop_toBottomOf="@id/questionTextTv" />

    <TextView
        android:id="@+id/markTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Mark"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/questionTypeTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionTextTv" />
</androidx.constraintlayout.widget.ConstraintLayout>